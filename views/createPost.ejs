<section class="pfp-section" id="profileinfo">
  <div class="container" id="pfpinfobox">
    <div class="row">
      <div class="objective-box col-lg-3">
        <img src="uploads/volunteerImages/<%= profileImage %>" id="pfp" />
      </div>

      <div class="objective-box col-lg-3 pfp-userinfo">
        <ul>
          <li class="pfp-volunteerName"><%= fullname %></li>
          <li><%= username %></li>
          <li><%= mobileno %></li>
          <li><%= address %></li>
        </ul>
      </div>

      <div class="objective-box col-lg-3 pfp-contribution">
        <ul id="pfpinfolist">
          <li>
            <h3 id="contribution_no"><%= volunteerPost.length %></h3>
          </li>
          <li>CONTRIBUTIONS</li>
        </ul>
      </div>

      <div class="objective-box col-lg-3 pfp-buttons">
        <ul>
          <li>
            <a href="/editInfo" class="btn btn-primary" id="editpfpbtn">Edit Profile</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>

<!-- Form -->
<section class="post-section" id="post-form">
  <div class="container">
    <h2 class="section-heading">Create Post</h2>
    <form action="/createPost" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="address">Address</label>
        <textarea name="address" class="form-control" rows="2" required></textarea>
      </div>
      <div class="form-group">
        <label for="description">Description</label><br />
        <textarea type="text" class="form-control rounded-0" rows="10" name="description" required></textarea>
      </div>
      <div class="form-group">
        <label for="postImage">Related Image</label>
        <input type="file" class="form-control" name="postImage" required />
      </div>
      <button type="button" class="btn btn-dark btn-top-margin" onclick="clearInputField()">
        Reset
      </button>
      <button type="submit" class="btn btn-dark btn-top-margin">Post</button>
    </form>
  </div>
</section>

