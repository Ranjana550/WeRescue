<%- include('partials/header') %>
<script src="/js/validationChecks.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<div class="login-container log">
  <div class="row">
    <div class="col-sm-8">
      <div class="">
        <div class="">

          <form action="/login" method="POST" class="form-1">
            <h1>Login</h1>
            <div class="form-group">
              <% if(messages.length > 0 && messages[0] === false) {  %>
              <div class="alert alert-danger">
                <%= messages[1] %>
              </div>
              <% } %>
            </div>

            <div class="form-group">
              <label class="left-label" for="email">Email</label>
              <input type="email" class="form-control" name="username" id="username" required />
            </div>

            <div class="form-group">
              <label class="left-label" for="password">Password</label>
              <input type="password" class="form-control" name="password" id="password" required />
              <i class="toggle-password fa fa-fw fa-eye-slash" onclick="togglePasswordVisibility()"></i>
            </div>
            <button type="submit" class="btn btn-dark btn-top-margin">
              Login</button><br /><br />
            <a href="/register">Don't have an account?</a><br />

            <p>Or Sign In with</p>
            <div class="">
              <a href="/auth/google" role="button">
                <i class="fab fa-google fa-2x"></i>
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

</body>

</html>
